#!/usr/bin/env node

const { run } = require("..");

const args = require("yargs")
  .option("project", {
    alias: "p",
    describe: "Google cloud project name"
  })
  .option("keep", {
    default: 10,
    describe: "Number of tags to keep"
  })
  .option("yes", {
    alias: "y",
    default: false,
    describe: "Disable confirm before delete"
  }).argv;

run(args).catch(err => {
  console.error(err);
  process.exit(1);
});
